cw = 500px
ch = 200px
lls = 2rem

.clock-container
	margin 0 auto
	width 65%

.outer-shell
	background-color: #555
	width: cw
	height: ch
	display: inline-block

.inner-shell
	background-color: #000
	width 95%
	height 95%
	border: 15px solid #555
	overflow: hidden

.left-labels
	color #FFF
	font-size: lls
	float: left
	clear: left
	width cw*.15
	margin-top 20px
	text-align right

.clock-screen
	background-color #500
	margin-top: 20px
	display: inline-block


.clock-text
	color #F00
	font-size 7.5rem
	line-height: 6.5rem
	display: inline-block
.pm-auto
	width 25px
	height 25px
	border-radius: 100%
	background-color: #F00
	margin-top 15px
	float left
	clear left

.clock-indicator
	background-color #F00

.bottom-text
	margin-right: 20px
	color white
	float right
	clear: both